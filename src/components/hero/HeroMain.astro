---
import ButtonMain from "@components/base/ButtonMain.astro";
import ButtonSub from "@components/base/ButtonSub.astro";
import HeroMainModuleOne from "@components/hero/HeroMainModuleOne.astro";
---

<div class="min-h-screen w-full overflow-hidden bg-muted-100 dark:bg-muted-1000 relative">
  <div class="relative col-span-12 ltablet:col-span-7 lg:col-span-7">
    <video 
      autoplay 
      loop 
      muted 
      class="hidden dark:block w-full h-full ltablet:max-w-[3840px] max-w-[2160px] mx-auto"
    >
      <source src="/img/illustrations/background_1.mp4" type="video/mp4" />
    </video>

    <!-- Texto centrado horizontal y verticalmente -->
    <div class="absolute inset-0 flex flex-col items-center justify-center text-center text-white font-sans space-y-4">
      <!-- Aquí está el cambio: -->
      <div class="flex items-center">
        <h1 class="font-medium text-4xl ptablet:text-5xl lg:text-5xl text-muted-800 dark:text-white">
          Management + AI
        </h1>
        <span class="mx-4 text-muted-400 dark:text-muted-700"></span>
        <p class="text-lg text-muted-500 dark:text-muted-400">
          Let us help you enhance your management skills with AI-powered tools
        </p>
        <p>

        </p>
      </div>
      
      <!-- Centramos los botones horizontalmente -->
      <div class="flex justify-center">
        <ButtonMain to={"../components/content/hero/index.astro"} class="'min-w-[130px]'">
          Get Started
        </ButtonMain>
        <ButtonSub to={"/home"} class="'min-w-[130px]'">
          Explore
        </ButtonSub>
      </div>
    </div>

    <!-- Resto del contenido del héroe -->
  </div>

  
</div>
